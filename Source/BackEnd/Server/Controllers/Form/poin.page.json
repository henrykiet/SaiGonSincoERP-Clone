{
	"controller": "poin",
	"type": "voucher",
	"formId": "poin",
	"primaryKey": [
		"idGui"
	],
	"idVC": "Z03",
	"VCDate": "",
	"title": "",
	"class": "onSelectChange()",
	"tabs": [
		{
			"title": "Đơn đặt nhập hàng",
			"class": "text-[48px] px-4 py-2 focus:outline-none",
			"form": {
				"title": "Thông tin đơn đặt nhập hàng",
				"class": "",
				"formId": "poin",
				"fields": [
					{
						"key": "idGui",
						"label": "Key",
						"type": "hidden"
					},
					{
						"key": "voucherNumber",
						"label": "Số phiếu",
						"type": "text",
						"required": true
					},
					{
						"key": "voucherDate",
						"label": "Ngày tạo",
						"type": "date",
						"default": "now",
						"required": true
					},
					{
						"key": "vendorGroupCode",
						"label": "Nhóm NCC",
						"type": "lookup",
						"required": true,
						"multiple": false,
						"default": {
							"controller": "customerGroup",
							"filter": [
								{
									"field": "status",
									"value": "1",
									"operator": "="
								}
							]
						}
					},
					{
						"key": "expectedDate",
						"label": "Ngày dự kiến",
						"type": "date"
					},
					{
						"key": "approveDate",
						"label": "Ngày duyệt",
						"type": "date"
					},
					{
						"key": "vendorCode",
						"label": "Mã NCC",
						"type": "lookup",
						"required": true,
						"multiple": false,
						"default": {
							"controller": "supplier",
							"filter": [
								{
									"field": "status",
									"value": "1",
									"operator": "="
								}
							]
						}
					},
					{
						"key": "vendorAddress",
						"label": "Địa chỉ Nhà cung cấp",
						"type": "text"
					},
					{
						"key": "vendorPhone",
						"label": "Nhà cung cấp",
						"type": "text"
					},
					{
						"key": "vendorEmail",
						"label": "Email Nhà cung cấp",
						"type": "text"
					},
					{
						"key": "statusCode",
						"label": "Tình trạng duyệt",
						"type": "select",
						"required": true,
						"options": [
							{
								"label": "Lập chứng từ",
								"value": "0"
							},
							{
								"label": "Tạo phiếu",
								"value": "1"
							}
						]
					},
					{
						"key": "employeeCode",
						"label": "Nhân viên",
						"type": "lookup",
						"required": true,
						"multiple": false,
						"default": {
							"controller": "employee",
							"filter": [
								{
									"field": "status",
									"value": "1",
									"operator": "="
								}
							]
						}
					},
					{
						"key": "payTermCode",
						"label": "Kỳ hạn thanh toán",
						"type": "text",
						"required": true
					},
					{
						"key": "payTimeDays",
						"label": "TG thanh toán",
						"type": "number",
						"required": true
					},

					{
						"key": "receivePlace",
						"label": "Nơi nhận hàng",
						"type": "text",
						"required": true
					},
					{
						"key": "receiveAddress",
						"label": "Địa chỉ nhận hàng",
						"type": "text",
						"required": true
					},
					{
						"key": "Note",
						"label": "Ghi chú",
						"type": "text"
					},
					{
						"key": "status",
						"label": "Trạng thái",
						"type": "select",
						"required": true,
						"options": [
							{
								"label": "Lập chứng từ",
								"value": "0"
							},
							{
								"label": "Đặt hàng",
								"value": "1"
							}
						]
					},
					{
						"key": "total_amount",
						"label": "Tổng cộng",
						"type": "number",
						"disabled": true,
						"currency": "VN",
						"subtotal": true,
						"calculation": {
							"calculations": [
								{
									"formula": "[total_amount] = SUM([amount]) ",
									"dependencies": [
										"amount"
									],
									"precision": 2
								}
							]
						}
					}
				],
				"initialData": {}
			},
			"detail": [
				{
					"title": "Chi tiết",
					"controllerDetail": "poindetail",
					"formId": "poindetail",
					"foreignKey": "idGui, line_nbr",
					"fields": [
						{
							"key": "line_nbr",
							"label": "Stt",
							"disabled": true,
							"type": "text",
							"width": "80px"
						},
						{
							"key": "itemCode",
							"label": "Mã vật tư",
							"required": true,
							"type": "lookup",
							"width": "450px",
							"multiple": false,
							"default": {
								"controller": "item",
								"filter": [
									{
										"field": "status",
										"value": "1",
										"operator": "="
									}
								]
							},
							"onChange": {
								"api": "/api/CustomQuery/execute",
								"params": [
									"itemCode"
								],
								"dataType": [
									"String"
								],
								"query": "select uom from item where item_id = @itemCode",
								"map": {
									"uom": "uom"
								}
							}
						},
						{
							"key": "uom",
							"label": "Đơn vị tính",
							"required": true,
							"type": "lookup",
							"width": "150px",
							"multiple": false,
							"default": {
								"controller": "uom",
								"filter": [
									{
										"field": "status",
										"value": "1",
										"operator": "="
									}
								]
							}
						},
						{
							"key": "quantity",
							"label": "Số lượng đặt",
							"required": true,
							"type": "number",
							"width": "150px",
							"trigger": [
								"amount"
							]
						},
						{
							"key": "price",
							"label": "Đơn giá",
							"type": "number",
							"width": "150px",
							"currency": "VN",
							"trigger": [
								"amount"
							]
						},
						{
							"key": "discountRate",
							"label": "% Chiết khấu",
							"type": "number",
							"width": "150px",
							"currency": "VN",
							"trigger": [
								"amount",
								"discount"
							]
						},
						{
							"key": "discount",
							"label": "Chiếu khấu",
							"type": "number",
							"width": "150px",
							"currency": "VN",
							"trigger": [
								"amount"
							],
							"calculation": {
								"calculations": [
									{
										"formula": "[discount] = [quantity] * [price] * [discountRate]/100",
										"dependencies": [
											"quantity",
											"price",
											"discountRate"
										],
										"precision": 0
									}
								]
							}
						},
						{
							"key": "amount",
							"label": "Thành tiền",
							"width": "150px",
							"currency": "VN",
							"type": "number",
							"trigger": [
								"tax",
								"payment"
							],
							"calculation": {
								"calculations": [
									{
										"formula": "[amount] = [quantity] * [price] + [discount]",
										"dependencies": [
											"quantity",
											"price"
										],
										"precision": 0
									}
								]
							}
						},
						{
							"key": "note",
							"label": "Ghi chú",
							"width": "150px",
							"type": "text"
						}
					],
					"initialData": []
				}
			]
		},
		{
			"title": "Tệp đính kèm",
			"type": "file-attachment"
		}
	],
	"dataProcessing": {
		"actions": {
			"post": [
				{
					"step": "beforeUpdate",
					"type": "sql01",
					"query": "exec beforeUpdatePoin N'@idGui', N'@voucherNumber', N'@voucherDate';"
				},
				{
					"step": "afterUpdate",
					"type": "sql02",
					"query": "exec afterUpdatePoin N'@idGui', N'@voucherNumber', N'@voucherDate';"
				}
			]
		}
	}
}