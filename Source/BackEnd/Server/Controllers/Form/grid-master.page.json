              },
              {
                "label": "Gói",
                "value": "goi"
              },
              {
                "label": "Mét",
                "value": "met"
              },
              {
                "label": "Tấn",
                "value": "tan"
              }
            ]
          },
          {
            "key": "quantity",
            "label": "Số lượng",
            "type": "number",
            "required": true,
            "min": 0,
            "step": 0.01,
            "placeholder": "Nhập số lượng",
            "validators": {
              "min": 0
            }
          },
          {
            "key": "unit_price",
            "label": "Đơn giá",
            "type": "number",
            "required": true,
            "min": 0,
            "step": 1000,
            "placeholder": "Nhập đơn giá",
            "validators": {
              "min": 0
            }
          },
          {
            "key": "total_value",
            "label": "Thành tiền",
            "type": "number",
            "disabled": true,
            "placeholder": "Tự động tính"
          },
          {
            "key": "category",
            "label": "Nhóm hàng",
            "type": "select",
            "required": true,
            "options": [
              {
                "label": "Nguyên vật liệu",
                "value": "raw_material"
              },
              {
                "label": "Thành phẩm",
                "value": "finished_product"
              },
              {
                "label": "Bán thành phẩm",
                "value": "semi_finished"
              },
              {
                "label": "Phụ kiện",
                "value": "accessory"
              },
              {
                "label": "Công cụ",
                "value": "tool"
              },
              {
                "label": "Vật tư tiêu hao",
                "value": "consumable"
              }
            ]
          },
          {
            "key": "supplier",
            "label": "Nhà cung cấp",
            "type": "text",
            "placeholder": "Nhập nhà cung cấp",
            "validators": {
              "maxLength": 100
            }
          },
          {
            "key": "location_in_warehouse",
            "label": "Vị trí trong kho",
            "type": "text",
            "placeholder": "Ví dụ: A-01-02",
            "validators": {
              "maxLength": 20,
              "pattern": "^[A-Z]-[0-9]{2}-[0-9]{2}$"
            }
          },
          {
            "key": "min_stock",
            "label": "Tồn kho tối thiểu",
            "type": "number",
            "min": 0,
            "step": 1,
            "placeholder": "Số lượng tối thiểu",
            "validators": {
              "min": 0
            }
          }
        ],
