{
  "title": "Quản lý kho hàng",
  "class": "inventory-management",
  "tabs": [
    {
      "title": "Thông tin kho",
      "class": "warehouse-info-tab",
      "form": {
        "title": "Thông tin kho hàng",
        "fields": [
          {
            "key": "warehouse_code",
            "label": "Mã kho",
            "type": "text",
            "required": true,
            "placeholder": "Nhập mã kho",
            "validators": {
              "minLength": 3,
              "maxLength": 20,
              "pattern": "^[A-Z0-9]+$"
            }
          },
          {
            "key": "warehouse_name",
            "label": "Tên kho",
            "type": "text",
            "required": true,
            "placeholder": "Nhập tên kho",
            "validators": {
              "minLength": 5,
              "maxLength": 100
            }
          },
          {
            "key": "location",
            "label": "Địa điểm",
            "type": "text",
            "placeholder": "Nhập địa điểm kho",
            "validators": {
              "maxLength": 200
            }
          },
          {
            "key": "manager",
            "label": "Quản lý kho",
            "type": "text",
            "placeholder": "Nhập tên quản lý",
            "validators": {
              "maxLength": 50
            }
          },
          {
            "key": "contact_phone",
            "label": "Số điện thoại liên hệ",
            "type": "text",
            "placeholder": "Nhập số điện thoại",
            "validators": {
              "pattern": "^[0-9]{10,11}$"
            }
          }
        ]
      }
    },
    {
      "title": "Danh sách hàng hóa",
      "class": "inventory-list-tab",
      "detail": {
        "title": "Danh sách nguyên vật liệu",
        "entity": "InventoryItem",
        "foreignKey": "warehouse_code",
        "fields": [
          {
            "key": "item_code",
            "label": "Mã hàng",
            "type": "text",
            "required": true,
            "placeholder": "Nhập mã hàng",
            "validators": {
              "minLength": 3,
              "maxLength": 20,
              "pattern": "^[A-Z0-9]+$"
            }
          },
          {
            "key": "item_name",
            "label": "Tên mặt hàng",
            "type": "text",
            "required": true,
            "placeholder": "Nhập tên mặt hàng",
            "validators": {
              "minLength": 3,
              "maxLength": 100
            }
          },
          {
            "key": "unit",
            "label": "Đvt",
            "type": "select",
            "required": true,
            "options": [
              {
                "label": "Bao",
                "value": "bao"
              },
              {
                "label": "Thùng",
                "value": "thung"
              },
              {
                "label": "Kg",
